---
import Layout from '../layouts/Layout.astro';

// ðŸ‘‡ 1. IMPORT YOUR IMAGES FROM SRC/ASSETS
import mdImage from '../assets/md.webp';
import bdmLGImage from '../assets/bdmLG.webp';
import bdmCEImage from '../assets/bdmCE.webp';
import bdmFNBImage from '../assets/bdmFNB.webp';

// You can customize the page title here
const pageTitle = "Company | JLO Global Resources";

// Team Data
const teamMembers = [
  {
    name: "Muhammad Jazli",
    role: "Managing Director",
    image: mdImage, // ðŸ‘‡ Use the imported variable, NOT a string
    description: "Oversees all aspects of the companyâ€™s operations, driving strategic direction, managing key partnerships, and ensuring the business meets its objectives."
  },
  {
    name: "Syed Amirul Asyraf",
    role: "BDM (LG Electronics Unit)",
    image: bdmLGImage, // ðŸ‘‡ Use the imported variable
    description: "Leads marketing and sales initiatives for the LG business unit; responsible for generating online and offline sales, conducting cold calls, nurturing leads, and converting prospects into clients."
  },
  {
    name: "Muhammad Azizul Harith",
    role: "BDM (Signboard & Civil Work)",
    image: bdmCEImage, // ðŸ‘‡ Use the imported variable
    description: "Drives sales and promotional activities for signboard and civil work projects, manages lead generation and client outreach, and supports the LG business unit as required."
  },
  {
    name: "Muhammad Hafiz",
    role: "BDM (F&B Business Unit)",
    image: bdmFNBImage, // ðŸ‘‡ Use the imported variable
    description: "Acts as advisor to the Managing Director, coordinating the marketing team and HR-related functions, and overseeing all F&B business marketing activities from strategy through execution."
  }
];
---

<Layout title={pageTitle}>
  
  <section class="bg-[#00664e] text-white py-20 md:py-28 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-[url('/pattern.png')] bg-cover bg-center"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">
        Who We Are
      </h1>
      <p class="text-xl md:text-2xl text-gray-100 max-w-3xl mx-auto leading-relaxed">
        Blending creativity, strategy, and technology to help businesses build strong brands.
      </p>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        
        <div class="space-y-6">
          <h2 class="text-[#0d55a9] font-bold uppercase tracking-wider text-sm">About Us</h2>
          
          <h3 class="text-3xl md:text-4xl font-bold text-slate-900 leading-tight">
            Your Trusted Partner for Sustainable Growth.
          </h3>
          
          <div class="text-slate-600 leading-relaxed space-y-4">
            <p>
              Founded in 2019, <strong>JLO Global Resources</strong> is a full-suite marketing agency based in Petaling Jaya, Selangor. We help businesses build strong brands, attract more customers, and grow with confidence through tailored marketing strategies that blend creativity, strategy, and technology.
            </p>
            <p>
              Our team brings together specialists in brand development, digital marketing, social media, signage design, and customer engagement, all working with one goal in mind: to make every client stand out in their industry.
            </p>
            <p>
              Whether itâ€™s a new startup shaping its first brand identity, a growing SME looking to expand its reach, or a corporate client refining its market presence, we deliver strategies that work in the real world. Driven by values like integrity, innovation, and collaboration, weâ€™ve earned the trust of clients across Malaysia and beyond.
            </p>
          </div>
        </div>

        <div class="relative">
          <div class="aspect-[4/3] bg-gray-200 rounded-lg overflow-hidden shadow-xl">
            <img 
              src="/about-us-main.webp" 
              alt="JLO Global Resources Team" 
              class="w-full h-full object-cover hover:scale-105 transition duration-500"
            />
          </div>
          <div class="absolute -bottom-6 -left-6 w-24 h-24 bg-[#00664e] rounded-lg -z-10 hidden md:block"></div>
        </div>

      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
        
        <div class="bg-white p-8 md:p-12 rounded-2xl shadow-sm border-t-4 border-[#0d55a9] hover:shadow-md transition">
          <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center mb-6 text-[#0d55a9]">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">Our Vision</h3>
          <p class="text-slate-600 leading-relaxed italic">
            "We hope to be the trusted partner of choice for ambitious businesses across Malaysia and beyond, shaping vibrant brands, driving impactful engagement and elevating growth through innovative marketing for businesses that makes a lasting difference to have a stable economic landscape."
          </p>
        </div>

        <div class="bg-white p-8 md:p-12 rounded-2xl shadow-sm border-t-4 border-[#00664e] hover:shadow-md transition">
          <div class="w-12 h-12 bg-green-50 rounded-full flex items-center justify-center mb-6 text-[#00664e]">
             <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-4">Our Mission</h3>
          <p class="text-slate-600 leading-relaxed">
            Our mission is to empower businesses to stand out and succeed. We deliver tailored, full-suite marketing solutions that cover the full spectrum from brand strategy and digital presence to content creation and signage, helping our clients grow confidently, attract more customers, and make a lasting impression in their industries.
          </p>
        </div>

      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-slate-50 pt-0">
    <div class="container mx-auto px-4 text-center mb-12">
        <span class="inline-block py-1 px-3 rounded-full bg-blue-50 text-[#0d55a9] text-xs font-bold tracking-widest uppercase mb-4">
            Our Team
        </span>

        <h2 class="text-3xl md:text-5xl font-extrabold text-slate-900 mb-8 tracking-tight">
            The Organizational Chart Structure
        </h2>

        <div class="max-w-4xl mx-auto">
            <p class="text-slate-600 text-lg leading-relaxed">
                This organizational structure reflects a coordinated and specialized team at <strong class="text-[#00664e]">JLO Global Resources</strong>. Led by Managing Director <span class="text-slate-900 font-semibold">Muhammad Jazli</span>, the company operates through key business units managed by dedicated Business Development Managers across electronics, F&B, and signage divisions.
            </p>
            <div class="h-4"></div> 
            <p class="text-slate-600 text-lg leading-relaxed">
                Supporting roles span marketing, PR, creative design, administration, and operations, enabling smooth workflow and strong cross-department collaboration. Each individual contributes to driving growth, ensuring clients receive strategic, creative, and results-focused support across all marketing and service functions.
            </p>
        </div>
    </div>

    <div class="container mx-auto px-4">
        <div class="bg-white p-4 md:p-8 rounded-2xl shadow-sm border border-slate-100">
            <img 
                src="/office-banner.webp" 
                alt="JLO Organizational Chart Structure" 
                class="w-full h-auto block rounded-lg" 
            />
        </div>
    </div>
  </section>

  <section class="py-8 bg-white relative">
    <div class="container mx-auto px-4 text-center mb-16">
        <span class="inline-block py-1 px-3 rounded-full bg-emerald-50 text-[#00664e] text-xs font-bold tracking-widest uppercase mb-4">
            Meet The Team
        </span>
        <h2 class="text-3xl md:text-5xl font-extrabold text-slate-900 mb-6 tracking-tight">
            Our Team
        </h2>
        <p class="text-slate-600 text-lg max-w-3xl mx-auto leading-relaxed">
            Behind JLO Global Resources is a diverse team of marketers, designers, and strategists who share one goal: to help businesses grow through smart, creative, and effective marketing.
        </p>
    </div>

    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-8">
            {teamMembers.map((member) => (
                <div class="group relative bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 border border-slate-100 overflow-hidden flex flex-col h-full">
                    
                    <div class="h-64 w-full bg-gradient-to-br from-blue-50 to-emerald-50 flex items-end justify-center relative overflow-hidden group-hover:from-blue-100 group-hover:to-emerald-100 transition-colors duration-500">
                        <img 
                            src={member.image.src} 
                            alt={member.name} 
                            class="h-56 w-auto object-contain transition-transform duration-500 group-hover:scale-105"
                        />
                    </div>

                    <div class="p-6 text-left flex-grow flex flex-col">
                        <h3 class="text-xl font-bold text-slate-900 mb-1">
                            {member.name}
                        </h3>
                        <p class="text-[#0d55a9] font-semibold text-sm uppercase tracking-wide mb-4">
                            {member.role}
                        </p>
                        <p class="text-slate-600 text-sm leading-relaxed mb-4 flex-grow">
                            {member.description}
                        </p>
                    </div>
                    
                    <div class="h-1 w-full bg-gradient-to-r from-[#00664e] to-[#0d55a9]"></div>
                </div>
            ))}
        </div>
    </div>
  </section>

  <section class="bg-[#00221a] text-white py-20 text-center">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to elevate your brand?</h2>
        <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
            Let's work together to build a marketing strategy that makes a lasting difference.
        </p>
        
        <a href="/contact" class="btn-gradient inline-block px-10 py-4 rounded-full font-bold text-lg tracking-wide shadow-lg hover:shadow-xl">
            Contact Us Today
        </a>
    </div>
  </section>

</Layout>