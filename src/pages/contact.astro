const phoneLink = "+601137823199";
const whatsappLink = "601137823199"; 
const email = "jlo@jloglobalresources.com";
const address = "Mentari Plaza, 40-3, Jalan PJS 8/2, Bandar Sunway, 46150 Petaling Jaya, Selangor";

const faqList = [
  {
    question: "Do you provide delivery for the Rendang and Butter Cake?",
    answer: "Yes! We provide delivery throughout the Klang Valley area. Delivery fees depend on your location via Lalamove or GrabExpress."
  },
  {
