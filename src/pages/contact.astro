---

<Layout title="Contact Us | JLO Global Resources" description="Get in touch with JLO Global Resources for marketing, catering, or recruitment inquiries.">
  
  <section class="bg-[#00664e] text-white page-hero text-center relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-[radial-gradient(#00664e_1px,transparent_1px)] [background-size:16px_16px]"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-6">
        Get In Touch
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed">
        Have a project in mind? Let's discuss how we can help your brand grow.
      </p>
    </div>
  </section>

  <section class="py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
        
        <div class="space-y-10">
          <div>
            <h2 class="text-[#0d55a9] font-bold uppercase tracking-wider text-sm mb-2">Get In Touch</h2>
            <h3 class="text-3xl md:text-4xl font-bold text-slate-900 leading-tight">
              We'd love to hear from you.
            </h3>
            <p class="text-slate-600 mt-4 leading-relaxed">
              Have a project in mind or just want to ask a question?
              Fill out the form or reach out to us directly using the contact details below.
            </p>
          </div>

          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center text-[#0d55a9] flex-shrink-0 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
              </div>
              <div>
                <h4 class="font-bold text-slate-900 text-lg">Phone & WhatsApp</h4>
                <p class="text-slate-500 text-sm mb-2">Mon-Fri from 9am to 6pm</p>
                <div class="flex flex-col sm:flex-row gap-3">
                    <a href={`tel:${phoneLink}`} class="text-[#00664e] font-bold hover:underline flex items-center gap-1">
                        {phoneDisplay}
                    </a>
                    <span class="hidden sm:inline text-gray-300">|</span>
                    <a href={`https://wa.me/${whatsappLink}`} target="_blank" class="text-[#00664e] font-bold hover:underline flex items-center gap-1">
                        WhatsApp Chat
                    </a>
                </div>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center text-[#0d55a9] flex-shrink-0 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              </div>
              <div>
                <h4 class="font-bold text-slate-900 text-lg">Email</h4>
                <p class="text-slate-500 text-sm mb-2">For general inquiries</p>
                <a href={`mailto:${email}`} class="text-[#00664e] font-bold hover:underline">
                  {email}
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center text-[#0d55a9] flex-shrink-0 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
              </div>
              <div>
                <h4 class="font-bold text-slate-900 text-lg">Office</h4>
                <p class="text-slate-600 max-w-xs">
                  {address}
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white p-8 md:p-10 rounded-3xl shadow-xl border border-slate-100">
          <form class="space-y-6" id="contactForm">
            <input type="hidden" name="_template" value="table">
            
            <input type="hidden" name="_captcha" value="true">
            
            <input type="hidden" name="_subject" value="New Inquiry from Website">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-bold text-slate-900 mb-2">Name</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required 
                    maxlength="100" 
                    class="w-full px-4 py-3 rounded-lg bg-slate-50 border border-slate-200 text-slate-900 focus:border-[#00664e] focus:ring-2 focus:ring-[#00664e]/20 outline-none transition placeholder-gray-400" 
                    placeholder="Your name" 
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-bold text-slate-900 mb-2">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    maxlength="100"
                    class="w-full px-4 py-3 rounded-lg bg-slate-50 border border-slate-200 text-slate-900 focus:border-[#00664e] focus:ring-2 focus:ring-[#00664e]/20 outline-none transition placeholder-gray-400" 
                    placeholder="name@company.com" 
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="phone" class="block text-sm font-bold text-slate-900 mb-2">Phone Number</label>
                    <input 
                        type="tel" 
                        id="phone" 
                        name="phone" 
                        maxlength="20"
                        class="w-full px-4 py-3 rounded-lg bg-slate-50 border border-slate-200 text-slate-900 focus:border-[#00664e] focus:ring-2 focus:ring-[#00664e]/20 outline-none transition placeholder-gray-400" 
                        placeholder="+60 12-345 6789" 
                    />
                </div>
                <div>
                    <label for="subject" class="block text-sm font-bold text-slate-900 mb-2">Subject</label>
                    <select id="subject" name="subject" class="w-full px-4 py-3 rounded-lg bg-slate-50 border border-slate-200 text-slate-900 focus:border-[#00664e] focus:ring-2 focus:ring-[#00664e]/20 outline-none transition">
                        <option>General Inquiry</option>
                        <option>Marketing Services</option>
                        <option>Food & Catering Order</option>
                        <option>Signboard Quotation</option>
                        <option>Recruitment / Careers</option>
                    </select>
                </div>
            </div>

            <div>
              <label for="message" class="block text-sm font-bold text-slate-900 mb-2">Message</label>
              <textarea 
                  id="message" 
                  name="message" 
                  rows="4" 
                  required 
                  maxlength="2000"
                  class="w-full px-4 py-3 rounded-lg bg-slate-50 border border-slate-200 text-slate-900 focus:border-[#00664e] focus:ring-2 focus:ring-[#00664e]/20 outline-none transition placeholder-gray-400" 
                  placeholder="How can we help you?"
              ></textarea>
            </div>

            <button type="submit" class="w-full bg-[#00664e] hover:bg-[#005540] text-white font-bold py-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              Send Message
            </button>
          </form>
        </div>

      </div>
    </div>
  </section>

  <section class="pb-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="w-full h-[500px] rounded-3xl overflow-hidden shadow-xl border border-slate-200">
        <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3983.899727402844!2d101.6094602758832!3d3.067873653326164!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31cc4c8f5f543167%3A0x6b4f7453187654a!2sMentari%20Plaza%2C%20Bandar%20Sunway!5e0!3m2!1sen!2smy!4v1700000000000!5m2!1sen!2smy" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            title="JLO Global Resources Office Location"
        >
        </iframe>
      </div>
    </div>
  </section>

  <section class="py-12 bg-white border-t border-slate-100">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="text-center mb-16">
        <span class="inline-block py-1 px-3 rounded-full bg-blue-50 text-[#0d55a9] text-xs font-bold tracking-widest uppercase mb-4">
            FAQ
        </span>
        <h2 class="text-3xl md:text-5xl font-extrabold text-slate-900 tracking-tight">
          Frequently Asked Questions
        </h2>
      </div>

      <div class="space-y-4">
        {faqList.map((item) => (
          <div class="border border-slate-200 rounded-xl overflow-hidden">
            <details class="group">
              <summary class="flex justify-between items-center font-medium cursor-pointer list-none p-6 bg-slate-50 hover:bg-slate-100 transition-colors">
                <span class="text-slate-900 font-bold">{item.question}</span>
                <span class="transition group-open:rotate-180">
                  <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
                </span>
              </summary>
              <div class="text-slate-600 p-6 pt-0 bg-slate-50 leading-relaxed border-t border-slate-100 animate-fadeIn">
                {item.answer}
              </div>
            </details>
          </div>
        ))}
      </div>

    </div>
  </section>

</Layout>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  
  // ðŸ›¡ï¸ XSS Protection: Basic input sanitizer function
  const sanitizeInput = (input: string) => {
    if (!input) return "";
    return input.replace(/<\/?[^>]+(>|$)/g, "").trim();
  };

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalBtnText = submitBtn ? submitBtn.innerHTML : 'Send Message';
      
      // 1. Show loading state
      if (submitBtn) {
        submitBtn.innerHTML = 'Sending...';
        (submitBtn as HTMLButtonElement).disabled = true;
      }

      // 2. Prepare Data with Sanitization
      const formData = new FormData(form);
      const plainFormData: Record<string, string> = {};

      formData.forEach((value, key) => {
        // Apply sanitization to text inputs
        if (typeof value === 'string') {
           plainFormData[key] = sanitizeInput(value);
        } else {
           plainFormData[key] = value.toString();
        }
      });

      try {
        // ðŸ”’ SECURE SUBMISSION via FormSubmit AJAX
        // Your Random Token: 8b1b69a1d8360c3ca38c16d5e0acaf54
        const response = await fetch('https://formsubmit.co/ajax/8b1b69a1d8360c3ca38c16d5e0acaf54', {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(plainFormData)
        });

        const data = await response.json();

        if (data.success === "true" || response.ok) {
             alert('Thank you! Your message has been sent successfully. We will contact you shortly.');
             form.reset();
        } else {
             console.error("FormSubmit Error:", data);
             alert('Something went wrong. Please check your internet connection or use WhatsApp.');
        }
      } catch (error) {
          console.error('Network Error:', error);
          alert('Unable to send message. Please check your internet connection or use WhatsApp.');
      } finally {
          // 3. Restore button
          if (submitBtn) {
            submitBtn.innerHTML = originalBtnText;
            (submitBtn as HTMLButtonElement).disabled = false;
          }
      }
    });
  }
</script>