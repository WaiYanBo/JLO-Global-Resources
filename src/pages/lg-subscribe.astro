---
// src/pages/lg-subscribe.astro
import Layout from '../layouts/Layout.astro';
import lgImg from '../assets/lg-subscribe.webp';
---

<Layout 
  title="LG Subscribe | JLO Global Resources" 
  description="Flexible subscription plans for premium LG electronics. Access the latest technology for your business or home with affordable monthly plans."
>
  
  {/* Hero Section */}
  <section class="bg-[#00664e] text-white py-20 md:py-28 relative overflow-hidden">
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">
        LG Subscribe
      </h1>
      <p class="text-xl md:text-2xl text-gray-100 max-w-3xl mx-auto leading-relaxed">
        Flexible subscription plans for premium LG electronics.
      </p>
    </div>
  </section>

  {/* Main Content Section */}
  <section class="py-20 bg-gradient-to-b from-slate-50 to-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        
        {/* Image Side */}
        <div class="order-2 md:order-1">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img 
              src={lgImg.src} 
              alt="LG Subscribe" 
              loading="eager"
              width="600"
              height="500"
              class="w-full h-[400px] md:h-[500px] object-cover"
            />
          </div>
        </div>

        {/* Text Side */}
        <div class="order-1 md:order-2 space-y-6">
          <span class="text-[#0d55a9] font-bold tracking-widest uppercase text-sm">
            Premium Technology
          </span>
          <h2 class="text-3xl md:text-5xl font-bold text-slate-900 leading-tight">
            Access Latest LG Technology
          </h2>
          <p class="text-slate-600 text-lg leading-relaxed">
            Flexible subscription plans for premium LG electronics. Access the latest technology for your business or home with affordable monthly plans that fit your budget.
          </p>
          <p class="text-slate-600 text-lg leading-relaxed">
            From smart TVs and home appliances to business solutions, our LG Subscribe service makes cutting-edge technology accessible without the upfront investment.
          </p>
        </div>

      </div>
    </div>
  </section>

  {/* Photo Carousel Section */}
  <section class="py-20 bg-gradient-to-b from-white via-slate-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          LG Products Showcase
        </h2>
        <p class="text-slate-600 text-lg max-w-2xl mx-auto">
          Explore our range of premium LG electronics available through subscription
        </p>
      </div>

      <div class="relative">
        <div id="lg-carousel" class="overflow-hidden rounded-2xl">
          <div class="flex transition-transform duration-700 ease-in-out" style="transform: translateX(0%)">
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={lgImg.src} 
                  alt="LG Subscribe Photo 1" 
                  loading="lazy"
                  width="400"
                  height="400"
                  class="w-full h-[400px] md:h-[450px] object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Smart TVs</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={lgImg.src} 
                  alt="LG Subscribe Photo 2" 
                  loading="lazy"
                  width="400"
                  height="400"
                  class="w-full h-[400px] md:h-[450px] object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Home Appliances</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={lgImg.src} 
                  alt="LG Subscribe Photo 3" 
                  loading="lazy"
                  width="400"
                  height="400"
                  class="w-full h-[400px] md:h-[450px] object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Business Solutions</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={lgImg.src} 
                  alt="LG Subscribe Photo 4" 
                  loading="lazy"
                  width="400"
                  height="400"
                  class="w-full h-[400px] md:h-[450px] object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Latest Technology</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={lgImg.src} 
                  alt="LG Subscribe Photo 5" 
                  loading="lazy"
                  width="400"
                  height="400"
                  class="w-full h-[400px] md:h-[450px] object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Premium Quality</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={lgImg.src} 
                  alt="LG Subscribe Photo 6" 
                  loading="lazy"
                  width="400"
                  height="400"
                  class="w-full h-[400px] md:h-[450px] object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Flexible Plans</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <button 
          id="lg-prev"
          class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white text-slate-900 p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 z-30"
          aria-label="Previous slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <button 
          id="lg-next"
          class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white text-slate-900 p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 z-30"
          aria-label="Next slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>

      <div class="flex justify-center gap-2 mt-8">
        <button class="carousel-dot w-2 h-2 rounded-full bg-[#00664e] transition-all duration-300" data-slide="0"></button>
        <button class="carousel-dot w-2 h-2 rounded-full bg-gray-300 hover:bg-gray-400 transition-all duration-300" data-slide="1"></button>
        <button class="carousel-dot w-2 h-2 rounded-full bg-gray-300 hover:bg-gray-400 transition-all duration-300" data-slide="2"></button>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="relative group rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-br from-[#00664e]/80 to-[#0d55a9]/80 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10 flex items-center justify-center">
            <p class="text-white font-bold text-xl transform scale-0 group-hover:scale-100 transition-transform duration-500">Featured Product</p>
          </div>
          <img 
            src={lgImg.src} 
            alt="LG Subscribe Photo 7" 
            loading="lazy"
            width="600"
            height="500"
            class="w-full h-[500px] object-cover transform group-hover:scale-110 transition-transform duration-700"
          />
        </div>
        <div class="relative group rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-br from-[#00664e]/80 to-[#0d55a9]/80 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10 flex items-center justify-center">
            <p class="text-white font-bold text-xl transform scale-0 group-hover:scale-100 transition-transform duration-500">Premium Selection</p>
          </div>
          <img 
            src={lgImg.src} 
            alt="LG Subscribe Photo 8" 
            loading="lazy"
            width="600"
            height="500"
            class="w-full h-[500px] object-cover transform group-hover:scale-110 transition-transform duration-700"
          />
        </div>
      </div>
    </div>
  </section>

  <script>
    (function() {
      const carousel = document.getElementById('lg-carousel');
      const prevBtn = document.getElementById('lg-prev');
      const nextBtn = document.getElementById('lg-next');
      const dots = document.querySelectorAll('#lg-carousel ~ div ~ div .carousel-dot');
      let currentSlide = 0;
      const totalSlides = 3;

      function updateCarousel() {
        const translateX = -(currentSlide * (100 / totalSlides));
        carousel.querySelector('.flex').style.transform = `translateX(${translateX}%)`;
        
        dots.forEach((dot, index) => {
          if (index === currentSlide) {
            dot.classList.remove('bg-gray-300');
            dot.classList.add('bg-[#00664e]');
            dot.classList.remove('w-2');
            dot.classList.add('w-8');
          } else {
            dot.classList.add('bg-gray-300');
            dot.classList.remove('bg-[#00664e]');
            dot.classList.add('w-2');
            dot.classList.remove('w-8');
          }
        });
      }

      nextBtn?.addEventListener('click', () => {
        currentSlide = (currentSlide + 1) % totalSlides;
        updateCarousel();
      });

      prevBtn?.addEventListener('click', () => {
        currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
        updateCarousel();
      });

      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          currentSlide = index;
          updateCarousel();
        });
      });

      setInterval(() => {
        currentSlide = (currentSlide + 1) % totalSlides;
        updateCarousel();
      }, 5000);
    })();
  </script>

  {/* Services Offered Section */}
  <section class="py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          Subscription Benefits
        </h2>
        <p class="text-slate-600 text-lg max-w-2xl mx-auto">
          Why choose LG Subscribe for your technology needs
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold text-slate-900 mb-3">Flexible Plans</h3>
          <p class="text-slate-600">
            Choose from various subscription plans that suit your needs and budget, with easy upgrade options.
          </p>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold text-slate-900 mb-3">Latest Products</h3>
          <p class="text-slate-600">
            Access the newest LG products and technology without committing to a full purchase upfront.
          </p>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold text-slate-900 mb-3">Full Support</h3>
          <p class="text-slate-600">
            Comprehensive maintenance and support included, ensuring your devices always perform at their best.
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="bg-[#00221a] text-white py-20 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Upgrade Your Technology?</h2>
      <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
        Explore our LG Subscribe plans and find the perfect solution for your business or home.
      </p>
      <a href="/contact" class="btn-gradient inline-block px-10 py-4 rounded-full font-bold text-lg tracking-wide shadow-lg hover:shadow-xl">
        View Plans
      </a>
    </div>
  </section>

</Layout>
