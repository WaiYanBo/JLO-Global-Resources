---
// src/pages/corporate-media.astro
import Layout from '../layouts/Layout.astro';
import mediaImg from '../assets/corporate-media.webp';
import mediaImg1 from '../assets/corporate-media1.webp';
import media1 from '../assets/media1.webp';
import media2 from '../assets/media2.webp';
import media3 from '../assets/media3.webp';
import media4 from '../assets/media4.webp';
import media5 from '../assets/media5.webp';
import media6 from '../assets/media6.webp';
import media7 from '../assets/media7.webp';
---

<Layout 
  title="Corporate Video & Photography | JLO Global Resources" 
  description="Professional visual storytelling for national and corporate levels. We capture your brand's essence through high-quality photography and cinematic video production."
>
  
  {/* Hero Section */}
  <section class="bg-[#00664e] text-white page-hero relative overflow-hidden">
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">
        National & Corporate Media Services
      </h1>
      <p class="text-xl md:text-2xl text-gray-100 max-w-3xl mx-auto leading-relaxed">
        Delivering world-class visual storytelling through professional videography and photography.
      </p>
    </div>
  </section>

  {/* Main Content Section */}
  <section class="py-20 bg-gradient-to-b from-slate-50 to-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        
        {/* Image Side */}
        <div class="order-1">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img 
              src={mediaImg1.src} 
              alt="Professional Production Setup" 
              loading="eager"
              width="600"
              height="500"
              class="w-full aspect-[8/9] md:aspect-[3/2] object-cover"
            />
          </div>
        </div>

        {/* Text Side */}
        <div class="order-2 space-y-6">
          <span class="text-[#0d55a9] font-bold tracking-widest uppercase text-sm">
            Visual Excellence
          </span>
          <h2 class="text-3xl md:text-5xl font-bold text-slate-900 leading-tight">
            Premium Media Production for National Brands
          </h2>
          <p class="text-slate-600 text-lg leading-relaxed">
            We specialize in high-impact visual content creation, ranging from large-scale corporate conferences to intricate studio productions. Our team utilizes industry-leading equipment to ensure every frame reflects the prestige of your brand.
          </p>
          <p class="text-slate-600 text-lg leading-relaxed">
            From capturing the gravity of national-level events to producing cinematic corporate profiles, we provide a comprehensive suite of media services tailored for high-stakes environments.
          </p>
        </div>

      </div>
    </div>
  </section>

  {/* Photo Carousel Section */}
  <section class="py-20 bg-gradient-to-b from-white via-slate-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          Our Visual Portfolio
        </h2>
        <p class="text-slate-600 text-lg max-w-2xl mx-auto">
          A glimpse into our professional production standards and event coverage
        </p>
      </div>

      <div class="relative">
        <div id="media-carousel" class="overflow-hidden rounded-2xl">
          <div class="flex transition-transform duration-700 ease-in-out" style="transform: translateX(0%)">
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 aspect-[8/9]">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={media5.src} 
                  alt="National Level Event Coverage" 
                  loading="lazy"
                  width="400"
                  height="450"
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">National Event Coverage</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 aspect-[8/9]">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={media1.src} 
                  alt="Cinematic Video Production" 
                  loading="lazy"
                  width="400"
                  height="450"
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Cinematic Production</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 aspect-[8/9]">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={media2.src} 
                  alt="Broadcast Quality Setups" 
                  loading="lazy"
                  width="400"
                  height="450"
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Broadcast Excellence</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 aspect-[8/9]">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={media3.src} 
                  alt="Corporate Documentary" 
                  loading="lazy"
                  width="400"
                  height="450"
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Corporate Storytelling</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 aspect-[8/9]">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={media4.src} 
                  alt="High-End Studio Photography" 
                  loading="lazy"
                  width="400"
                  height="450"
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Studio Photography</p>
                </div>
              </div>
            </div>
            <div class="min-w-full md:min-w-[50%] lg:min-w-[33.333%] px-3">
              <div class="relative group rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 aspect-[8/9]">
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                <img 
                  src={media5.src} 
                  alt="Professional Post-Production" 
                  loading="lazy"
                  width="400"
                  height="450"
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
                <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 z-20">
                  <p class="text-white font-semibold text-lg">Post-Production</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <button 
          id="media-prev"
          class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white text-slate-900 p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 z-30"
          aria-label="Previous slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <button 
          id="media-next"
          class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white text-slate-900 p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 z-30"
          aria-label="Next slide"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>

      <div class="flex justify-center gap-2 mt-8">
        <button class="carousel-dot w-2 h-2 rounded-full bg-[#00664e] transition-all duration-300" data-slide="0"></button>
        <button class="carousel-dot w-2 h-2 rounded-full bg-gray-300 hover:bg-gray-400 transition-all duration-300" data-slide="1"></button>
        <button class="carousel-dot w-2 h-2 rounded-full bg-gray-300 hover:bg-gray-400 transition-all duration-300" data-slide="2"></button>
        <button class="carousel-dot w-2 h-2 rounded-full bg-gray-300 hover:bg-gray-400 transition-all duration-300" data-slide="3"></button>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="relative group rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-br from-[#00664e]/80 to-[#0d55a9]/80 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10 flex items-center justify-center">
            <p class="text-white font-bold text-xl transform scale-0 group-hover:scale-100 transition-transform duration-500">Government & State Functions</p>
          </div>
          <img 
            src={media6.src} 
            alt="National Event Portfolio" 
            loading="lazy"
            width="600"
            height="500"
            class="w-full aspect-[8/9] object-cover transform group-hover:scale-110 transition-transform duration-700"
          />
        </div>
        <div class="relative group rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-br from-[#00664e]/80 to-[#0d55a9]/80 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10 flex items-center justify-center">
            <p class="text-white font-bold text-xl transform scale-0 group-hover:scale-100 transition-transform duration-500">Trusted by Global Leaders</p>
          </div>
          <img 
            src={media7.src} 
            alt="Corporate Media Excellence" 
            loading="lazy"
            width="600"
            height="500"
            class="w-full aspect-[8/9] object-cover transform group-hover:scale-110 transition-transform duration-700"
          />
        </div>
      </div>
    </div>
  </section>

  {/* Services Offered Section */}
  <section class="py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          Our Media Services
        </h2>
        <p class="text-slate-600 text-lg max-w-2xl mx-auto">
          Comprehensive visual content solutions for national and corporate institutions
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold text-slate-900 mb-3">Event Photography</h3>
          <p class="text-slate-600">
            Professional coverage for high-level summits, corporate launches, and state events with rapid delivery.
          </p>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold text-slate-900 mb-3">Videography & Film</h3>
          <p class="text-slate-600">
            Cinematic video production including multi-cam live streams, promotional films, and documentary-style features.
          </p>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-xl font-bold text-slate-900 mb-3">Creative Direction</h3>
          <p class="text-slate-600">
            End-to-end production management from concept development and storyboarding to final post-production.
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="bg-[#00221a] text-white py-20 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Capture Your Vision?</h2>
      <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
        Partner with us for world-class media production that sets your brand apart on a global scale.
      </p>
      <a href="/contact" class="btn-gradient inline-block px-10 py-4 rounded-full font-bold text-lg tracking-wide shadow-lg hover:shadow-xl">
        Book a Consultation
      </a>
    </div>
  </section>

  <script>
    (function() {
      const carousel = document.getElementById('media-carousel');
      const prevBtn = document.getElementById('media-prev');
      const nextBtn = document.getElementById('media-next');
      const dots = document.querySelectorAll('#media-carousel ~ div ~ div .carousel-dot');
      const carouselInner = carousel?.querySelector('.flex') as HTMLElement;
      let currentSlide = 0;
      const totalImages = 6;
      
      // @ts-nocheck
      function getSlidesPerView() {
        const width = window.innerWidth;
        if (width >= 1024) return 3; // lg: 3 slides
        if (width >= 768) return 2;  // md: 2 slides
        return 1; // mobile: 1 slide
      }
      
      // @ts-nocheck
      function getMaxSlides() {
        const slidesPerView = getSlidesPerView();
        return Math.max(1, totalImages - slidesPerView + 1);
      }
      
      // @ts-nocheck
      function updateCarousel() {
        const slidesPerView = getSlidesPerView();
        const slideWidth = 100 / slidesPerView;
        const translateX = -(currentSlide * slideWidth);
        
        if (carouselInner) {
          carouselInner.style.transform = `translateX(${translateX}%)`;
        }
        
        // @ts-nocheck 
        dots.forEach((dot, index) => {
          if (index === currentSlide) {
            dot.classList.remove('bg-gray-300');
            dot.classList.add('bg-[#00664e]');
            dot.classList.remove('w-2');
            dot.classList.add('w-8');
          } else {
            dot.classList.add('bg-gray-300');
            dot.classList.remove('bg-[#00664e]');
            dot.classList.add('w-2');
            dot.classList.remove('w-8');
          }
        });
      }

      nextBtn?.addEventListener('click', () => {
        const maxSlides = getMaxSlides();
        currentSlide = (currentSlide + 1) % maxSlides;
        updateCarousel();
      });

      prevBtn?.addEventListener('click', () => {
        const maxSlides = getMaxSlides();
        currentSlide = (currentSlide - 1 + maxSlides) % maxSlides;
        updateCarousel();
      });

      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          currentSlide = index;
          updateCarousel();
        });
      });

      // Handle window resize
      let resizeTimeout: ReturnType<typeof setTimeout>;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          const maxSlides = getMaxSlides();
          if (currentSlide >= maxSlides) {
            currentSlide = maxSlides - 1;
          }
          updateCarousel();
        }, 250);
      });

      setInterval(() => {
        const maxSlides = getMaxSlides();
        currentSlide = (currentSlide + 1) % maxSlides;
        updateCarousel();
      }, 5000);
    })();
  </script>

</Layout>
