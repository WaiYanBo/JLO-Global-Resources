---
// src/pages/products.astro
import Layout from '../layouts/Layout.astro';
import CheckIcon from '../components/CheckIcon.astro'; // ðŸ‘ˆ IMPORT THE NEW ICON

// Importing .webp images
import rendangImg from '../assets/rendang-cutout.webp'; 
import cakeImg from '../assets/cake-cutout.webp';
import acarImg from '../assets/acar-cutout.webp';
---

<Layout title="Premium Products | JLO Global Resources" description="Discover our exclusive selection of premium food products.">
  
  <section class="pt-32 pb-12 bg-[#00221a] text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-400">
        Our Premium Selections
    </h1>
    <p class="text-gray-400 mt-4 max-w-2xl mx-auto px-4">
        Handpicked flavors crafted with tradition, ready for your table.
    </p>
  </section>

  <section id="rendang" class="min-h-screen flex items-center py-20 bg-gradient-to-b from-[#1a1a1a] to-black border-t border-white/5 relative overflow-hidden">
    
    <div class="absolute top-0 right-0 w-1/2 h-full bg-orange-600/5 blur-[120px] rounded-full pointer-events-none"></div>

    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-12 items-center relative z-10">
        
        <div class="order-2 md:order-1 flex justify-center">
            <div class="relative w-full max-w-md">
                <div class="absolute inset-0 bg-orange-500/20 blur-3xl rounded-full"></div>
                <img 
                    src={rendangImg.src} 
                    alt="Daging Minang Rendang" 
                    class="relative w-full h-auto object-contain drop-shadow-2xl hover:scale-105 transition-transform duration-700"
                />
            </div>
        </div>

        <div class="order-1 md:order-2 text-white space-y-8">
            <div>
                <span class="inline-block px-4 py-1 rounded-full bg-orange-600/20 text-orange-500 font-bold tracking-wider text-sm border border-orange-600/30 mb-4">
                    BEST SELLER
                </span>
                <h2 class="text-4xl md:text-6xl font-serif font-bold leading-tight">
                    Daging Minang <span class="text-orange-500">Rendang</span>
                </h2>
            </div>
            
            <p class="text-xl text-gray-300 font-light italic">
                "Savour the timeless taste of Rendang TETA, crafted with tradition and excellence since 2001."
            </p>

            <ul class="space-y-4 text-gray-300 text-lg">
                <li class="flex items-center gap-3">
                    <CheckIcon colorClass="text-orange-500" />
                    200g per Serving (Ready to Eat)
                </li>
                <li class="flex items-center gap-3">
                     <CheckIcon colorClass="text-orange-500" />
                    Premium Tenderloin Beef
                </li>
                <li class="flex items-center gap-3">
                     <CheckIcon colorClass="text-orange-500" />
                    Authentic Minang Spices
                </li>
            </ul>

            <div class="flex flex-wrap items-center gap-6 pt-4">
                <div class="text-4xl font-bold text-white font-serif">RM 29.90</div>
                <a 
                    href="https://wa.me/601137823199?text=Hi%2C%20I%20would%20like%20to%20order%20the%20Daging%20Minang%20Rendang!" 
                    target="_blank"
                    class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-full font-bold transition-all hover:shadow-lg hover:shadow-orange-600/40 flex items-center gap-2"
                >
                    Order Now <span>â†’</span>
                </a>
            </div>
        </div>
    </div>
  </section>


  <section id="cake" class="min-h-screen flex items-center py-20 bg-[#FDFBF7] text-[#4A3B32] relative overflow-hidden">
    
    <div class="absolute bottom-0 left-0 w-1/2 h-full bg-yellow-200/20 blur-[100px] rounded-full pointer-events-none"></div>

    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-12 items-center relative z-10">
        
        <div class="space-y-8">
            <div>
                <span class="inline-block px-4 py-1 rounded-full bg-yellow-400/20 text-yellow-700 font-bold tracking-wider text-sm border border-yellow-400/30 mb-4">
                    FRESH BAKED
                </span>
                <h2 class="text-4xl md:text-6xl font-serif font-bold leading-tight">
                    Vanilla <span class="text-yellow-600">Butter Cake</span>
                </h2>
            </div>
            
            <p class="text-xl text-[#6D5A50] font-light">
                Premium vanilla flavored homemade sweet treats. Soft, fluffy, and perfect for tea time.
            </p>

            <ul class="space-y-4 text-[#6D5A50] text-lg">
                <li class="flex items-center gap-3">
                    <CheckIcon colorClass="text-yellow-600" />
                    Premium Vanilla Ingredients
                </li>
                <li class="flex items-center gap-3">
                    <CheckIcon colorClass="text-yellow-600" />
                    Soft & Fluffy Texture
                </li>
                <li class="flex items-center gap-3">
                    <CheckIcon colorClass="text-yellow-600" />
                    Available in Slices (RM3) or Whole
                </li>
            </ul>

            <div class="flex flex-wrap items-center gap-6 pt-4">
                <div class="text-4xl font-bold text-[#4A3B32] font-serif">RM 25.00</div>
                <a 
                    href="https://wa.me/601137823199?text=Hi%2C%20I%20would%20like%20to%20order%20the%20Vanilla%20Butter%20Cake!" 
                    target="_blank"
                    class="inline-flex bg-[#4A3B32] hover:bg-black text-white px-8 py-4 rounded-full font-bold transition-all hover:shadow-xl flex items-center gap-2"
                >
                    Order Whole Cake <span>â†’</span>
                </a>
            </div>
        </div>

        <div class="flex justify-center">
            <div class="relative w-full max-w-md">
                <div class="absolute inset-0 bg-yellow-300/30 blur-3xl rounded-full"></div>
                <img 
                    src={cakeImg.src} 
                    alt="Vanilla Butter Cake" 
                    class="relative w-full h-auto object-contain drop-shadow-xl hover:scale-105 transition-transform duration-700"
                />
            </div>
        </div>

    </div>
  </section>


  <section id="acar" class="min-h-screen flex items-center py-20 bg-[#1E293B] text-white relative overflow-hidden">
    
    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-12 items-center relative z-10">
        
        <div class="order-2 md:order-1 flex justify-center">
            <div class="relative w-full max-w-md">
                <div class="absolute inset-0 bg-yellow-500/10 blur-3xl rounded-full"></div>
                <img 
                    src={acarImg.src} 
                    alt="Lagenda Acar Buah" 
                    class="relative w-full h-auto object-contain drop-shadow-2xl hover:rotate-3 transition-transform duration-700"
                />
            </div>
        </div>

        <div class="order-1 md:order-2 space-y-8">
            <div>
                <span class="inline-block px-4 py-1 rounded-full bg-yellow-500/20 text-yellow-400 font-bold tracking-wider text-sm border border-yellow-500/30 mb-4">
                    TRADITIONAL RECIPE
                </span>
                <h2 class="text-4xl md:text-6xl font-serif font-bold leading-tight">
                    Lagenda <span class="text-yellow-400">Acar Buah</span>
                </h2>
            </div>
            
            <p class="text-xl text-gray-300 font-light">
                A timeless burst of sweet, tangy, and spicy flavours in every spoonful. The perfect appetizer to enhance any meal.
            </p>

             <ul class="space-y-4 text-gray-300 text-lg">
                <li class="flex items-center gap-3">
                    <CheckIcon colorClass="text-yellow-400" />
                    250g Jar Size
                </li>
                <li class="flex items-center gap-3">
                    <CheckIcon colorClass="text-yellow-400" />
                    Sweet, Tangy & Spicy Taste
                </li>
                <li class="flex items-center gap-3">
                    <CheckIcon colorClass="text-yellow-400" />
                    Perfect Meal Enhancer
                </li>
            </ul>

            <div class="flex flex-wrap items-center gap-6 pt-4">
                <div class="text-4xl font-bold text-white font-serif">RM 20.00</div>
                <a 
                    href="https://wa.me/601137823199?text=Hi%2C%20I%20would%20like%20to%20order%20the%20Lagenda%20Acar%20Buah!" 
                    target="_blank"
                    class="inline-flex bg-yellow-500 hover:bg-yellow-400 text-black px-8 py-4 rounded-full font-bold transition-all hover:shadow-lg hover:shadow-yellow-500/40 flex items-center gap-2"
                >
                    Order Now <span>â†’</span>
                </a>
            </div>
        </div>
    </div>
  </section>

</Layout>