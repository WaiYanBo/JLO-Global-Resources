---
// src/pages/services.astro
import Layout from '../layouts/Layout.astro';

// ðŸ‘‡ IMPORT YOUR NEW IMAGES HERE
// Make sure these files exist in src/assets/ or the build will fail!
import consultancyImg from '../assets/consultancy.webp';
import signboardImg from '../assets/signboard.webp';
import cateringImg from '../assets/catering.webp';
import lgImg from '../assets/lg-subscribe.webp';
import mediaImg from '../assets/corporate-media.webp';
import marketingImg from '../assets/marketing.webp';

const servicesList = [
  { 
    id: "consultancy",
    title: "Consultancy", 
    image: consultancyImg,
    description: "Expert guidance to navigate complex business challenges. We provide strategic insights and operational solutions to help your organization thrive."
  },
  { 
    id: "signboard",
    title: "Signboard", 
    image: signboardImg,
    description: "High-impact, custom signage solutions. From design to installation, we create visual markers that elevate your brand visibility and recognition."
  },
  { 
    id: "corporate-media",
    title: "Corporate Video/Photography", 
    image: mediaImg,
    description: "Professional visual storytelling. We capture your brand's essence through high-quality photography and corporate video production."
  },
  { 
    id: "lg-subscribe",
    title: "LG Subscribe", 
    image: lgImg,
    description: "Flexible subscription plans for premium LG electronics. Access the latest technology for your business or home with affordable monthly plans."
  },
  { 
    id: "catering",
    title: "Catering", 
    image: cateringImg,
    description: "Exceptional culinary experiences for corporate events and private gatherings. Our catering service combines taste, presentation, and reliability."
  },  
  { 
    id: "marketing",
    title: "Marketing Services", 
    image: marketingImg,
    description: "Data-driven marketing strategies tailored to your goals. We help you reach your target audience and drive measurable growth."
  },
];
---

<Layout 
  title="Our Services | JLO Global Resources" 
  description="Explore our services: Consultancy, Signboard, Catering, LG Subscribe, Corporate Media, and Marketing."
>
  
  {/* Page Header */}
  <section class="bg-[#00664e] text-white py-20 md:py-28 relative overflow-hidden">
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">
        Our Services
      </h1>
      <p class="text-xl md:text-2xl text-gray-100 max-w-3xl mx-auto leading-relaxed">
        Comprehensive solutions tailored to your business needs.
      </p>
    </div>
  </section>

  {/* Services Loop */}
  <div class="bg-slate-50 py-12">
    {servicesList.map((service, index) => (
      <section id={service.id} class="py-12 md:py-20 scroll-mt-24 border-b border-gray-200 last:border-0">
        <div class="container mx-auto px-4">
            <div class={`flex flex-col md:flex-row gap-12 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
                
                {/* Image Side */}
                <div class="w-full md:w-1/2">
                    <div class="relative rounded-2xl overflow-hidden shadow-2xl group">
                        <div class="absolute inset-0 bg-[#00664e]/10 group-hover:bg-transparent transition-colors duration-500"></div>
                        <img 
                            src={service.image.src} 
                            alt={service.title} 
                            class="w-full h-[300px] md:h-[400px] object-cover transform group-hover:scale-105 transition-transform duration-700"
                        />
                    </div>
                </div>

                {/* Text Side */}
                <div class="w-full md:w-1/2 space-y-6">
                    <span class="text-[#0d55a9] font-bold tracking-widest uppercase text-sm">
                        Service 0{index + 1}
                    </span>
                    <h2 class="text-3xl md:text-5xl font-bold text-slate-900 leading-tight">
                        {service.title}
                    </h2>
                    <p class="text-slate-600 text-lg leading-relaxed">
                        {service.description}
                    </p>
                    <a href="/contact" class="inline-flex items-center gap-2 text-[#00664e] font-bold hover:underline mt-4">
                        Inquire about this service
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </a>
                </div>

            </div>
        </div>
      </section>
    ))}
  </div>

  {/* CTA Section */}
  <section class="bg-[#00221a] text-white py-20 text-center">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to get started?</h2>
        <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
           Contact our team today to discuss how we can assist with your specific project requirements.
        </p>
        <a href="/contact" class="btn-gradient inline-block px-10 py-4 rounded-full font-bold text-lg tracking-wide shadow-lg hover:shadow-xl">
            Get a Quote
        </a>
    </div>
  </section>

</Layout>