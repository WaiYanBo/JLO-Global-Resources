  <script>
    // Carousel functionality for consultancy page
    (function() {
      const carousel = document.getElementById('consultancy-carousel');
      const prevBtn = document.getElementById('consultancy-prev');
      const nextBtn = document.getElementById('consultancy-next');
      const dots = document.querySelectorAll('#consultancy-carousel ~ div ~ div .carousel-dot');
      const carouselInner = carousel?.querySelector('.flex') as HTMLElement;
      let currentSlide = 0;
      const totalImages = 6;
      
      // @ts-nocheck
      function getSlidesPerView() {
        const width = window.innerWidth;
        if (width >= 1024) return 3; // lg: 3 slides
        if (width >= 768) return 2;  // md: 2 slides
        return 1; // mobile: 1 slide
      }
      
      // @ts-nocheck
      function getMaxSlides() {
        const slidesPerView = getSlidesPerView();
        return Math.max(1, totalImages - slidesPerView + 1);
      }
      
      // @ts-nocheck
      function updateCarousel() {
        const slidesPerView = getSlidesPerView();
        const slideWidth = 100 / slidesPerView;
        const translateX = -(currentSlide * slideWidth);
        
        if (carouselInner) {
          carouselInner.style.transform = `translateX(${translateX}%)`;
        }
        
        // @ts-nocheck 
        dots.forEach((dot, index) => {
          if (index === currentSlide) {
            dot.classList.remove('bg-gray-300');
            dot.classList.add('bg-[#00664e]');
            dot.classList.remove('w-2');
            dot.classList.add('w-8');
          } else {
            dot.classList.add('bg-gray-300');
            dot.classList.remove('bg-[#00664e]');
            dot.classList.add('w-2');
            dot.classList.remove('w-8');
          }
        });
      }

      nextBtn?.addEventListener('click', () => {
        const maxSlides = getMaxSlides();
        currentSlide = (currentSlide + 1) % maxSlides;
        updateCarousel();
      });

      prevBtn?.addEventListener('click', () => {
        const maxSlides = getMaxSlides();
        currentSlide = (currentSlide - 1 + maxSlides) % maxSlides;
        updateCarousel();
      });

      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          currentSlide = index;
          updateCarousel();
        });
      });

      // Handle window resize
      let resizeTimeout: ReturnType<typeof setTimeout>;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          const maxSlides = getMaxSlides();
          if (currentSlide >= maxSlides) {
            currentSlide = maxSlides - 1;
          }
          updateCarousel();
        }, 250);
      });

      setInterval(() => {
        const maxSlides = getMaxSlides();
        currentSlide = (currentSlide + 1) % maxSlides;
        updateCarousel();
      }, 5000);
    })();
  </script>

