// ðŸ‘‡ IMPORT YOUR TRANSPARENT IMAGES HERE
// Make sure to create these .png files in src/assets/
import rendangImg from '../assets/rendang-cutout.webp'; 
import cakeImg from '../assets/cake-cutout.webp';
import acarImg from '../assets/acar-cutout.webp';

const products = [
  {
    id: "rendang",
    title: "Daging Minang Rendang",
    subtitle: "Tenderloin Beef â€¢ 200g",
    price: "RM 29.90",
    image: rendangImg,
    badge: "Best Seller",
    whatsappMessage: "Hi, I would like to order the Daging Minang Rendang!"
  },
  {
    id: "cake",
    title: "Vanilla Butter Cake",
    subtitle: "Premium Vanilla â€¢ Whole Cake",
    price: "RM 25.00",
    image: cakeImg,
    badge: "Fresh Baked",
    whatsappMessage: "Hi, I would like to order the Vanilla Butter Cake!"
  },
  {
    id: "acar",
    title: "Lagenda Acar Buah",
    subtitle: "Sweet, Tangy & Spicy â€¢ 250g",
    price: "RM 20.00",
    image: acarImg,
    badge: "Traditional",
    whatsappMessage: "Hi, I would like to order the Lagenda Acar Buah!"
  }
];
---

<section id="products" class="py-24 bg-gradient-to-b from-[#00221a] to-slate-900 overflow-visible">
  <div class="container mx-auto px-4">
    
    <div class="text-center mb-20">
      <h2 class="text-white text-4xl md:text-5xl font-extrabold tracking-tight mb-4">
        Premium Selections
      </h2>
      <p class="text-gray-400 text-lg max-w-xl mx-auto">
        Curated flavors crafted with tradition and excellence.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 gap-y-24">
      
      {products.map((product) => (
        <div class="group relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl p-6 transition-all duration-300 hover:bg-white/10 hover:border-white/20 hover:-translate-y-2 shadow-2xl">
          
          <div class="relative -mt-24 mb-6 flex justify-center">
            <div class="relative w-48 h-48 md:w-56 md:h-56">
                <div class="absolute inset-0 bg-[#ffd700]/20 blur-3xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <img 
                  src={product.image.src} 
                  alt={product.title} 
                  class="relative w-full h-full object-contain drop-shadow-2xl transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3"
                />
            </div>
          </div>

          <div class="text-center space-y-4">
            
            <span class="inline-block px-3 py-1 text-xs font-bold tracking-wider text-[#00221a] uppercase bg-[#FFD700] rounded-full mb-2">
              {product.badge}
            </span>

            <div>
              <h3 class="text-white text-2xl font-bold leading-tight mb-1">
                {product.title}
              </h3>
              <p class="text-gray-400 text-sm font-medium uppercase tracking-wide">
                {product.subtitle}
              </p>
            </div>

            <div class="text-[#FFD700] text-3xl font-extrabold font-serif">
              {product.price}
            </div>

            <a 
              href={`https://wa.me/601137823199?text=${encodeURIComponent(product.whatsappMessage)}`}
              target="_blank"
              class="block w-full py-3 rounded-xl bg-[#00664e] hover:bg-[#008c6b] text-white font-bold transition-all duration-300 shadow-lg group-hover:shadow-[#00664e]/50"
            >
              Order via WhatsApp
            </a>

          </div>
        </div>
      ))}

    </div>
  </div>
</section>