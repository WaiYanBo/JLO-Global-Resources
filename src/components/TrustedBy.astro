---
// src/components/TrustedBy.astro
import clientLogos from '../assets/clients.webp';
---

<section class="py-4 bg-transparent">
  <div class="container mx-auto px-4 text-center">
    
    <p class="text-[#00664e] text-sm font-bold tracking-[0.2em] uppercase mb-8 opacity-90">
      Trusted by Industry Leaders
    </p>

    <div class="flex justify-center">
      <img 
        src={clientLogos.src} 
        alt="Companies that trust JLO Global Resources" 
        class="w-full max-w-5xl h-auto object-contain mix-blend-multiply opacity-90 hover:opacity-100 transition-opacity duration-300"
      />
    </div>

  </div>
</section>