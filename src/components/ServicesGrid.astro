---
// src/components/ServicesGrid.astro

// ðŸ‘‡ IMPORT SAME IMAGES AS PAGE
import consultancyImg from '../assets/consultancy.webp';
import signboardImg from '../assets/signboard.webp';
import cateringImg from '../assets/catering.webp';
import lgImg from '../assets/lg-subscribe.webp';
import mediaImg from '../assets/corporate-media.webp';
import marketingImg from '../assets/marketing.webp';

const services = [
  { 
    title: "Consultancy", 
    image: consultancyImg,
    href: "/consultancy"        // Changed from /services#consultancy
  },
  { 
    title: "Signboard", 
    image: signboardImg,
    href: "/signboard"          // Changed from /services#signboard
  },
  { 
    title: "Corporate Video/Photo", 
    image: mediaImg,
    href: "/corporate-media"    // Changed from /services#corporate-media
  },
  { 
    title: "LG Subscribe", 
    image: lgImg,
    href: "/lg-subscribe"       // Changed from /services#lg-subscribe
  },
  { 
    title: "Catering", 
    image: cateringImg,
    href: "/catering"           // Changed from /services#catering
  },
  { 
    title: "Marketing Services", 
    image: marketingImg,
    href: "/marketing"          // Changed from /services#marketing
  }
];
---

<section id="services-grid" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    
    <div class="text-center mb-12">
        <span class="inline-block py-1 px-3 rounded-full bg-blue-50 text-[#0d55a9] text-xs font-bold tracking-widest uppercase mb-4">
            What We Do
        </span>
        <h2 class="text-3xl md:text-5xl font-extrabold text-slate-900 tracking-tight">
          Our Core Services
        </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service) => (
        <a href={service.href} class="group relative h-64 rounded-xl overflow-hidden shadow-lg cursor-pointer block">
          
          <img 
            src={service.image.src} 
            alt={service.title} 
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
          />

          <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-all duration-300"></div>

          <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black/80 to-transparent">
            <h3 class="text-white text-xl font-bold tracking-tight leading-tight drop-shadow-md group-hover:text-[#FFD700] transition-colors">
              {service.title}
            </h3>
            <span class="text-gray-300 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center gap-1 mt-2">
                View Details 
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
            </span>
          </div>

        </a>
      ))}
    </div>

  </div>
</section>