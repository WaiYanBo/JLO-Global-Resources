<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service) => (
        <a href={service.href} class="group relative h-64 overflow-hidden shadow-lg cursor-pointer">
          
          <img 
            src={service.image} 
            alt={service.title} 
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
          />

          <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-all duration-300"></div>

          <div class="absolute top-6 left-6 right-6">
            <h3 class="text-white text-2xl font-bold tracking-tight leading-tight drop-shadow-md">
              {service.title}
            </h3>
          </div>

        </a>
      ))}
    </div>

  </div>
</section>