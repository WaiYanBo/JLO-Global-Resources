---
// src/components/CompanyIntro.astro
import sectionBg from '../assets/sectionbg.webp';
import TrustedBy from '../components/TrustedBy.astro';
---

<section class="relative w-full py-8 md:py-8 flex flex-col items-center justify-center overflow-hidden">
    
    <img 
      src={sectionBg.src} 
      alt="Background Gradient" 
      class="absolute inset-0 w-full h-full object-cover -z-10"
    />

    <div class="relative z-10 container mx-auto px-4 text-center mb-2">
        
        <h2 class="text-slate-900 text-4xl md:text-6xl font-extrabold tracking-tight mb-4">
            JLO Global Resources
        </h2>

        <p class="text-slate-600 text-xl md:text-3xl font-medium uppercase tracking-widest">
            "CEO of Leverage"
        </p>

    </div>
    
    <div class="relative z-10 w-full">
        <TrustedBy />
    </div>

</section>